{% extends 'base_front.html.twig' %}

{% block title %}Login{% endblock %}

{% block body %}
    <h1>Login</h1>
    <div style="margin-bottom: 100px"></div>
    <table class="table">
        <tbody>
            <tr>
                <th>EmailLogin</th>
                <td>{{ login.emailLogin }}</td>
            </tr>
            <tr>
                <th>MdpLogin</th>
                <td>{{ login.mdpLogin }}</td>
            </tr>
            <tr>
                <th>BlockedLogin</th>
                <td>{{ login.blockedLogin ? 'Yes' : 'No' }}</td>
            </tr>
            <tr>
                <th>BlockedMessage</th>
                <td>{{ login.blockedMessage }}</td>
            </tr>
            <tr>
                <th>BlockedDuree</th>
                <td>{{ login.blockedDuree ? login.blockedDuree|date('Y-m-d') : '' }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_login_index') }}">back to list</a>

    <a href="{{ path('app_login_edit', {'idLogin': login.idLogin}) }}">edit</a>

    {{ include('login/_delete_form.html.twig') }}
{% endblock %}
