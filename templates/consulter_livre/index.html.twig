{% extends 'base_front.html.twig' %}
{% block title %}livre index{% endblock %}
{% block body %}
<h1>Livre index</h1>
<div style="margin-bottom: 100px"></div>
<div class="container">
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>

<div class="row">
        <div class="col-7"><input type="text" class="form-control" id="search" style="margin-bottom: 5%;" placeholder="Recherche ..."></div>
        <div class="col-3"><select class="selectpicker" id="typeEvenements" multiple>
                {% for type in types %}
                    <option value="{{ type.idCategorieLivre }}">{{ type.libelle }}</option>
                {% endfor %}
            </select></div>
        <div class="col-2">
            {% if  app.user %}
            {% if is_granted('ROLE_ECRIVAIN') %}

                    <a class="nav-link" href="{{ path('app_livre_ajouter') }}">Ajouter un livre </a>

            {% endif %}
            {% endif %}
        </div>

    </div>
            <div class="container" >

                <div id="content">
                    <div id="contentrow" class="row">
                    {% include "consulter_livre/card.html.twig" %}
                </div>
                </div>
            </div>
        </div>

    <script src= "{{ asset('js/livreScripts.js') }}" ></script>

{% endblock %}

