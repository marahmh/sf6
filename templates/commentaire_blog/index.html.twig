{% extends 'base_back.html.twig' %}

{% block title %}Hello BlogController!{% endblock %}

{% block body %}


    <!-- /.box-title -->

    <!-- /.dropdown js__dropdown -->
    <table id="example" class="table table-striped table-bordered display" style="width:100%">
        <thead>

        <tr>
            <th>nom utilisateur</th>
            <th>contenu</th>
            <th>date</th>
            <th>titre blog</th>
            <th>Supprimer</th>
        </tr>

        </thead>

        <tbody>
        {% for c in commentaire %}
            <tr>
                <td>{{ c.idUtilisateur.nomUtilisateur }}</td>
                <td>{{ c.contenuCommentaire }}</td>
                <td>{{ c.dateCommentaire|date('d/m/y h:m:s') }}</td>
                <td>{{ c.idBlog.titreBlog }}</td>
                <td><a href="{{ path ('app_delete_comm_back',{'id':c.idCommentaire}) }}">Supprimer</a> </td>


            </tr>
        {% endfor %}
        </tbody>
    </table>

    <!-- /.row small-spacing -->

{% endblock %}
