{% extends 'base_front.html.twig' %}



{% block title %}Evenement index{% endblock %}

{% block body %}
    <head>
        <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-select@1.13.14/dist/css/bootstrap-select.min.css">
    </head>
    <body>
    <h1>Evenement index</h1>
    <div style="margin-bottom: 100px"></div>
    <div class="container">
    <div class="row">
        <div class="col-6">
            <input type="text" class="form-control" id="search">
        </div>
        <div class="col-3">
        <select class="selectpicker" id="typeEvenements" multiple>
            {% for type in types %}
            <option value="{{ type.idTypeEvenement }}">{{ type.libelleTypeEvenement }}</option>
            {% endfor %}
        </select>
        </div>
        <div class="col-3">
            {% if is_granted('ROLE_ECRIVAIN') %}

                <a class="nav-link" href="{{ path('app_evenement_new') }}">Ajouter un evenement </a>

            {% endif %}
        </div>
    </div>
        <div style="margin-bottom: 20px"></div>
    <div  id="content">
{% include "evenement/contenuCards.html.twig" %}
    </div>
    </div>
    </body>


{% endblock %}
{% block javascript %}
<script src="https://cdn.jsdelivr.net/npm/bootstrap-select@1.13.14/dist/js/bootstrap-select.min.js"></script>
<script src= "{{ asset('js/evenementScripts.js') }}" ></script>
{% endblock %}