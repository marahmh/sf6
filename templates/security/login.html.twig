{% extends 'base.html.twig' %}

{% block title %}Log in!{% endblock %}

{% block body %}
    <link rel="stylesheet" href="{{ asset('frontOffice/assets/css/login.css')}}">
    <link href="{{asset('frontOffice/vendor/bootstrap/css/bootstrap.min.css')}}" rel="stylesheet">



    <div class="limiter" style="background-image: url({{ asset('frontOffice/assets/images/loginBackground.png')}});">
        <div class="container-login100">
            <div class="wrap-login100">
                <form method="post" class="login100-form">


                    {% if error %}
                        <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
                    {% endif %}

                    {% if app.user %}
                        <div class="mb-3">
                            You are logged in as {{ app.user.username }}, <a href="{{ path('app_logout') }}">Logout</a>
                        </div>
                    {% endif %}

                     <div class="login100-form-title">Libro</div>
                    <input type="text" value="{{ last_username }}" name="emailLogin" id="inputEmailLogin" class="input100 form-control " autocomplete="email" required  placeholder="Email" style="margin-top: 5%">
                    <input type="password" name="password" id="inputPassword" class="input100 form-control " autocomplete="current-password" required placeholder="Mot de passe">

                    <input type="hidden" name="_csrf_token"
                           value="{{ csrf_token('authenticate') }}"
                    >

                    {#
                    Uncomment this section and add a remember_me option below your firewall to activate remember me functionality.
                    See https://symfony.com/doc/current/security/remember_me.html

                    <div class="checkbox mb-3">
                        <label>
                            <input type="checkbox" name="_remember_me"> Remember me
                        </label>
                    </div>
                    #}

                    <button class="btn loginButton" type="submit">
                        Sign in
                    </button>
                    <div class="row" style="margin-top: 5%"><a href="/forgotpassword" style="margin-left: 37%">Mot de passe oublié?</a></div>
                    <div class="row" style="margin-top: 5%"><a href="/registration" style="margin-left: 34%">Créeer un nauveau compte</a></div>
                </form>

                <div class="login100-more" style="background-image: url({{ asset('frontOffice/assets/images/loginBooks1.jpg')}});"></div>
            </div>
        </div>
    </div>
{% endblock %}
